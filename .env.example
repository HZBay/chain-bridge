# RabbitMQ Configuration (Message Queue for Batch Processing)
RABBITMQ_ENABLED=false
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=chain-bridge
RABBITMQ_PASSWORD=your-secure-password
RABBITMQ_VHOST=/
RABBITMQ_MAX_CONNECTIONS=10
RABBITMQ_HEARTBEAT_SECONDS=60
RABBITMQ_QUEUE_PREFIX=chain-bridge
RABBITMQ_DURABLE_QUEUES=true

# Batch Processing Strategy (Gradual Rollout)
BATCH_ENABLE_RABBITMQ=false
BATCH_RABBITMQ_PERCENTAGE=0
BATCH_FALLBACK_TO_MEMORY=true
BATCH_MONITORING_ENABLED=true